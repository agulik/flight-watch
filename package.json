{
  "name": "flight-watch",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "crawl": "'ts-node' -r dotenv/config src/index.ts",
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^10.12.2",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "telegraf": "^3.25.0",
    "x-ray": "^2.3.3"
  }
}
